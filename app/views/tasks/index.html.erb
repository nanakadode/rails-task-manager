<div>
<h1>My tasks</h1>

<div>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <li><%= link_to "delete", method="delete" data: {'Are you sure to delete this task?'}%></li>
  <% end %>
</ul>
</div>
<h2><%= link_to "Add a new task", new_task_path %></h2>

</div>
